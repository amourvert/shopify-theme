.tk-adobe-caslon-pro{
	font-family: 'Adobe Caslon Pro', serif;
}

.tk-futura-pt{
	font-family: 'Avenir Next', sans-serif;
	font-weight: 500;
}

.index .flex-caption h2.slide-title{
	font-family: 'Avenir Next', sans-serif;
	font-weight: 500;
	text-transform: uppercase;
	font-size: 4em;
	text-shadow: 0px 0px 8px rgba(0, 0, 0, .7);
	letter-spacing: 1px;

}

.index .flex-caption p{
	font-family: 'Avenir Next', sans-serif;
	font-weight: 500;
	text-transform: uppercase;
	font-size: 2em;
	text-shadow: 0px 0px 8px rgba(0, 0, 0, .7);
	margin-top: 90px;
	letter-spacing: 3px;
}

.index .cta{
	margin-top: 110px;
}


.index .cta a{
	font-family: 'Avenir Next', sans-serif;
	font-weight: 500;
	text-transform: uppercase;
	font-size: 2em;
	border: 3px solid #fff;
	background: none;
	text-shadow: 0px 0px 8px rgba(0, 0, 0, .7);
	letter-spacing: 3px;
}

#about  h1, #about h2{
	font-family:'Futura', sans-serif;
	text-transform: capitalize;
	font-size: 2.8em;
}

#about h3{
	font-family: 'Adobe Caslon Pro', serif;
	font-style: italic;
	font-size: 2.2em;
}

#about p{
	font-family: 'Avenir Next', sans-serif;
	font-size: 1.3em;
	line-height: 1.7em;
}

#who {
	font-size: 1.5em !important;
	line-height: 2em !important;
}

.section{
	margin:30px auto 0 ;
}

#about img{
	margin: 0 0 25px;
}

